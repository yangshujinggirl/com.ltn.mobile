* {
  margin: 0;
  padding: 0;
}
.vip-select-page {
  font-size:28px;
  color:#101010;
  .nav-bar {
    color: #fff;
    width: 100%;
    height: 128px;
    padding: 64px 0 28px;
    box-sizing: border-box;
    background:#222222;
    position: fixed;
    left:0;
    top:0;
    .arrow-left {
      width: 20px;
      height: 36px;
      background: url(./imgs/arrow.png) center no-repeat;
      background-size: contain;
      position: absolute;
      left:2.5%;
      top:50%;
      transform: translateY(-50%);
    }
    .sure-title {
      text-align: center;
      font-size: 36px;
      position: relative;
    }
  }
  .vip-content-wrap {
    padding: 0 2.5%;
    margin-top: 150px;
  }
  .invest-amount-select {
    padding:32px;
    background-color: #fff;
    margin-top: 20px;
    .money-value {
      display:inline-block;
      font-size:80px;
      color:#ed8d50;
      margin-top: 48px;
      padding-right: 50px;
      position: relative;
      &:after {
        content: '';
        width: 10px;
        height: 16px;
        background: url(./imgs/sanjiaoxing.png) no-repeat;
        background-size: contain;
        position: absolute;
        right: 0;
        top:50%;
        transform: translateY(-50%);
        -webkit-transform: translateY(-50%);
      }
    }
    .tips {
      font-size:24px;
      color:#c2c2c2;
    }
  }
  .part-two {
    padding:0 32px;
    background-color: #fff;
    margin-top: 20px;
    .lable {
      padding:32px 0;
      border-bottom: 1px solid #f6f6f6;
    }
    .right-content {
      text-align: right;
      .rc,.arrow-right {
        display: inline-block;
        vertical-align: middle;
      }
      .arrow-right {
        width: 20px;
        height: 36px;
        background:url(./imgs/arrow-right.png) no-repeat;
        background-size: contain;
        margin-left: 16px;
      }
    }
  }
  .button-wrap{
    position: fixed;
    bottom: 0;
    overflow: hidden;
    padding: 30px 0;
    max-height: 160px;
    width: 100%;
    text-align: center;
    &.disabled{
      button{
        background-color: #e9e9e9;
        color: #fff;
      }
    }
    button{
      display: inline-block;
      width: 90%;
      height:100px;
      border: none;
      border-radius:100px;
      background:#d4a667;
      color: #fff;
      font-size: 34px;
    }
  }
}
//去除按钮点击效果
.am-modal-button-active {
  background-color: #fff;
}
.am-picker-popup-item-active {
  background-color: #fff;
}
