.vip-finance {
  padding-bottom: 200px;
  font-size     : 0;
  .banner {
    position           : relative;
    margin-bottom      : 98px;
    height             : 450px;
    background-image   : url('./imgs/img.png');
    background-position: center;
    background-size    : 100% 100%;
    background-repeat  : no-repeat;
    .vipchart-wrap {
      position           : absolute;
      top                : 164px;
      left               : 5%;
      overflow           : hidden;
      max-height         : 360px;
      width              : 90%;
      border-radius      : 10px;
      background-color   : rgb(216,166,103);
      background-image   : url('./imgs/VIP-bg.png');
      background-position: center;
      background-size    : 100% 100%;
      background-repeat  : no-repeat;
      box-shadow         : 0 0 20px rgba(216,166,103,.3);
      text-align         : center;
      img {
        margin-top: 100px;
        width     : 28%;
      }
      p {
        margin     : 10px 0 60px;
        padding    : 0 42px;
        color      : #ffedcd;
        font-size  : 26px;
        line-height: 1.5em;
      }
    }
  }
  .chart {
    position: relative;
    img {
      width: 100%;
    }
    h3 {
      position   : absolute;
      left       : 5%;
      top        : 5%;
      color      : #fff;
      font-weight: normal;
      font-size  : 40px;
    }
  }
  .text-wrap {
    padding         : 24px 0;
    background-color: #fff;
    p {
      margin     : 24px 0;
      padding    : 0 5%;
      font-size  : 24px;
      line-height: 1.5em;
      span {
        color: #101010;
      }
      .title {
        font-weight: bold;
      }
    }
  }
  .text-icon-wrap {
    padding         : 24px 0;
    background-color: #fff;
    p {
      position     : relative;
      margin-bottom: 28px;
      margin-left  : 5%;
      padding      : 0 5% 0 74px;
      img {
        position: absolute;
        left    : 0;
        width   : 48px;
      }
      span {
        font-size: 24px;
      }
      .title {
        display      : inline-block;
        margin-bottom: 14px;
        width        : 100%;
        font-weight  : bold;
        font-size    : 28px;
      }
    }
  }
  .button-wrap {
    position        : fixed;
    bottom          : 0;
    overflow        : hidden;
    padding         : 30px 0;
    max-height      : 160px;
    width           : 100%;
    background-color: #fff;
    text-align      : center;
    &.disabled {
      button {
        background-color: #e9e9e9;
        color           : #fff;
      }
    }
    button {
      display      : inline-block;
      width        : 90%;
      height       : 100px;
      border       : none;
      border-radius: 100px;
      background   : #d4a667;
      color        : #fff;
      font-size    : 34px;
    }
  }
}
.vip-nav-wrap {
  position: fixed;
  top     : 40px;
  left    : 5%;
  z-index : 222;
  width   : 72px;
  text-align: center;
  img {
    width: 24px;
  }
}
.modal-text {
  line-height: 150%;
  .red {
    color: #ff6600;
  }
}
.test {
  padding   : 40px;
  text-align: center;
  font-size : 30px;
}
